<body>
    <%-include("./components/navbar")%>
    <h2>Edit stud</h2>
    <form action="/students/<%=stud[0]._id%>/?_method=PATCH" method="POST">
        <input type="text" name="name" placeholder="name" value="<%=stud[0].name %>" required>
        <input type="text" name="course" placeholder="course" value=<%=stud[0].course%> required>
        <input type="number" name="year" placeholder="year" value=<%=stud[0].year%> required>
        <input type="number" name="grade" placeholder="grade" value=<%=stud[0].grade%> required>
        <button type="submit">Update</button>
    </form>
    
